<h1>Dictionary!</h1>

<ul>
  <% @words.each() do |word| %>
  <li><a href='/word/<%= word.id %>'><%= word.name %></a></li>
  <% end %>
</ul>

<form action="/" method="post">
  <label for="word">Add a word</label>
  <input type="text" name="word" id="word">
  <button type="submit">Add Word</button>
</form>

<a href="/clear">Clear Words</a>
