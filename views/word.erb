<h1><%= @word.name %></h1>

<ul>
  <% @word.definitions.each() do |definition| %>
  <li><%= definition %></li>
  <% end %>
</ul>

<form action="/word/<%= @word.id %>" method="post">
  <div class='form-group'>
    <input id='word_id' name='word_id' type='hidden' value='<%= @word.id() %>'>

    <label for="definition">Add a definition for this word</label>
    <input type="text" name="definition" id="definition" class='form-control'>
  </div>
  <button name="add">Add</button>
</form>
<br>
<a href='/'>Home</a>
